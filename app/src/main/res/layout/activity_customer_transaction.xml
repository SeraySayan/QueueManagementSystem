<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".CustomerTransaction"
    android:padding="20dp"
    android:background="@drawable/loginbkg">



    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:padding="24dp">

        <TextView
            android:id="@+id/peopleCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count of the people in the queue"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/remainingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated remaining time"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/EnterButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="#339933"
            android:text="Enter Queue"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Please select transaction type:"
        android:textSize="18sp"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:textSize="18sp"
        android:background="#7777DD"/>






</RelativeLayout>